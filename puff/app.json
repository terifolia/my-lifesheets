{
	"app": {
		"name": "Puff",
		"slug": "puff",
		"entry_name": "smoking sessions",
		"entries_name": "smoking sessionses",
		"description": "smoking sessions tracker",
		"private": false,
		"icon": "ðŸš¬",
		"color": "#e65c5c",
		"storage_type": "",
		"storage": "",
		"custom_css": "",
		"charts_placement": ""
	},
	"temporal": {
		"times": "yes",
		"ranges": ""
	},
	"entry": [
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal",
				"deletable"
			],
			"settings": {
				"expression": "weekday(date, 'shortname')"
			},
			"name": "weekday"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"type": "date",
				"default": "[$today]",
				"formatting": [
					"b"
				]
			},
			"name": "date"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"prefix": " at ",
				"type": "time",
				"default": "[time($startup, 'hours')]",
				"format": "[time(time, 'minutes')]"
			},
			"name": "time"
		},
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"visible": "false",
				"expression": "datetime(date, time)"
			},
			"name": "date_time"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"type": "text",
				"appearance": "line",
				"multiline": true
			},
			"name": "notes"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"suffix": "cigarettes",
				"default": "1",
				"max": 10,
				"number_edit": "spinner",
				"number_style": "bar",
				"bar_style": "discrete",
				"type": "number"
			},
			"name": "icons"
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"expression": "icons"
			},
			"name": "cigarettecount"
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {}
		}
	],
	"root": [
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"visible": "edit",
				"label": "âž• Add smoking sessions",
				"target": "add(entry)",
				"target_preset": "new",
				"appearance": "",
				"set_pairs": [],
				"filter_pairs": []
			}
		},
		{
			"type": "expression",
			"scope": "root",
			"settings": {
				"expression": "duration($now - first(date_time))",
				"prefix": "Days trying to quit: "
			}
		},
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"target_preset": "new",
				"target": "add(entry)",
				"set_pairs": [
					{
						"name": "icons",
						"value": "2"
					}
				],
				"filter_pairs": [],
				"label": "Add 2 cigarettes",
				"appearance": "",
				"formatting": [],
				"text_color": "#8e0013"
			}
		}
	],
	"charts": [
		{
			"type": "chart",
			"scope": "charts",
			"settings": {
				"type": "bar",
				"group_by": "day",
				"aggregate_of": "cigarettecount",
				"aggregate": "sum"
			}
		}
	]
}